@model NumericSequence.Models.NumberViewModel
@{
    ViewBag.Title = "Home Page";
}

<div>
    <h1>Numeric Sequence Calculator</h1>

</div>
<div class="row">
    <p id="instructions" class=" help-block">
        Enter a whole number and press enter or hit the Show button. It must be 1 or greater than 1 in the text box below.
    </p>
</div>
@using (Html.BeginForm())
{ @Html.AntiForgeryToken()   <div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-lg-8">
            <div class="form-group">


                @Html.LabelFor(model => model.InputNumber, htmlAttributes: new { @class = "control-label col-md-3" })

                <div class="col-lg-6">
                    @*@Html.EditorFor(model => model.InputNumber, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.EditorFor(model => model.InputNumber, new { htmlAttributes = new { @class = "form-control" } })
                </div>


                @Html.ValidationMessageFor(model => model.InputNumber, "", new { @class = "text-danger" })



            </div>
        </div>
        <div class="col-lg-2">
            <input type="submit" value="Show" class="btn btn-default" id="show-button" />
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.All, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.All, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OddSequence, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.OddSequence, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EvenSequence, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.EvenSequence, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CustomisedSequence, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.CustomisedSequence, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FibonacciSequence, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.FibonacciSequence, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
  
</div>
}
